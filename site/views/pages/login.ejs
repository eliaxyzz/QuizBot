<body>
    <div class="container">
        <header>
            <%- include('../partials/header') %>
        </header>

        <div class="content1">
            <div class="login-card">
                <h2>Login</h2>
                <form action="/" method="POST">
                    <p>
                        <label>Username</label>
                        <input class="txt1" name="username" type="text" placeholder="Username...">
                    </p>
                    <p>
                        <label>Password</label>
                        <input class="txt1" name="password" type="password" placeholder="Password...">
                    </p>
                    <button class="btnsign">Sign In</button>
                </form>
            </div>
        </div>

        <footer class="footer">
            <%- include('../partials/footer') %>
        </footer>
    </div>
</body>

